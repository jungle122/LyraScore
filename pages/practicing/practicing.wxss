page {
  box-sizing: border-box;
  background-color: #f8f8f8;
}

view, text {
  box-sizing: border-box;
}

.container {
  padding: 30rpx; /* 恢复左右边距 */
  width: 100%;
  padding-bottom: 140rpx; /* 给底部操作栏留空间 */
}

/* 伪搜索框样式 */
.top-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-entry {
  flex: 1;
  margin-top: 0;
}

.manage-btn {
  height: 80rpx;
  padding: 0 26rpx;
  border-radius: 40rpx;
  background: #fff5f8;
  color: #FA7298;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(250, 114, 152, 0.5);
}

.manage-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.toolbar-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.toolbar-text {
  font-size: 26rpx;
  color: #666;
}

.toolbar-count {
  font-size: 26rpx;
  color: #333;
}

.toolbar-done {
  font-size: 26rpx;
  color: #FA7298;
}

.search-box {
  background-color: #ffffff; /* 或者 #f0f0f0 看你背景色 */
  height: 80rpx;
  border-radius: 40rpx; /* 圆圆的胶囊形状 */
  display: flex;
  align-items: center;
  justify-content: center; /* 图标文字居中 */
  
  /* 给个阴影，让它浮起来 */
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  /* 如果背景是白的，给个边框区分一下 */
  border: 1rpx solid #eee;
}

.search-icon {
  font-size: 30rpx;
  margin-right: 15rpx;
}

.search-text {
  font-size: 28rpx;
  color: #999; /* 浅灰色文字，表示只是提示 */
}
/* 卡片样式 */
.song-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.select-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  margin-right: 24rpx;
  flex-shrink: 0;
  position: relative;
  transition: all 0.2s ease;
}

.select-circle.checked {
  background: #FA7298;
  border-color: #FA7298;
  transform: scale(1.1);
}

.select-circle.checked:after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 20rpx;
  border-right: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

/* 全选按钮样式 */
.select-all-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  flex-shrink: 0;
  position: relative;
  transition: all 0.2s ease;
}

.select-all-circle.checked {
  background: #FA7298;
  border-color: #FA7298;
  transform: scale(1.1);
}

.select-all-circle.checked:after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 20rpx;
  border-right: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

.card-info {
  display: flex;
  flex-direction: column;
  flex: 1; 
  margin-right: 20rpx;
  min-width: 0; 
}

.song-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}

.song-artist { font-size: 26rpx; color: #666; margin-bottom: 8rpx; }
.song-meta { font-size: 24rpx; color: #999; }

.card-tag {
  flex-shrink: 0; 
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-weight: bold;
}
.card-tag.blank { background-color: #e3f2fd; color: #1976d2; }
.card-tag.paper { background-color: #f3e5f5; color: #ab47bc; }
/* ✨ 新增：图片标签样式 (橙色) */
.card-tag.image { background-color: #fff7e6; color: #fa8c16; }

.empty-state { margin-top: 200rpx; text-align: center; color: #ccc; font-size: 30rpx; }

.action-bar {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  background: #FA7298;
  color: #ffffff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn {
  background: #ffffff;
  color: #FA7298;
  border: 2rpx solid #FA7298;
}

.action-btn.disabled {
  opacity: 0.4;
}