page {
  background-color: #f8f8f8;
  box-sizing: border-box; 
}

view, text {
  box-sizing: border-box;
}

.container {
  padding: 30rpx;
  width: 100%;
}

/* ✨ 简洁的顶部标题区 */
.add-header {
  margin-bottom: 40rpx;
  width: 100%;
  text-align: center;
}

.add-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

/* ✨ 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 0;
}

.menu-card {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.menu-icon-img {
  width: 54rpx;
  height: 54rpx;
}

.text-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #999;
}

.arrow {
  color: #ddd;
  font-size: 32rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}