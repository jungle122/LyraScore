page {
  box-sizing: border-box;
  background-color: #f8f8f8;
}

view, text {
  box-sizing: border-box;
}

.container {
  padding: 30rpx; /* 恢复左右边距 */
  width: 100%;
}

.header {
  margin-bottom: 40rpx;
  width: 100%;
  text-align: center;
}
.header-title { font-size: 48rpx; font-weight: bold; color: #333; display: block; }
.header-subtitle { font-size: 28rpx; color: #999; margin-top: 10rpx; display: block; }
/* ... header 样式之后 ... */

/* 伪搜索框样式 */
.search-entry {
  /*padding: 0 30rpx;*/
  padding: flex;
  margin-bottom: 30rpx;
}

.search-box {
  background-color: #ffffff; /* 或者 #f0f0f0 看你背景色 */
  height: 80rpx;
  border-radius: 40rpx; /* 圆圆的胶囊形状 */
  display: flex;
  align-items: center;
  justify-content: center; /* 图标文字居中 */
  
  /* 给个阴影，让它浮起来 */
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  /* 如果背景是白的，给个边框区分一下 */
  border: 1rpx solid #eee;
}

.search-icon {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.search-text {
  font-size: 28rpx;
  color: #999; /* 浅灰色文字，表示只是提示 */
}
/* 卡片样式 */
.song-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-info {
  display: flex;
  flex-direction: column;
  flex: 1; 
  margin-right: 20rpx;
  min-width: 0; 
}

.song-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}

.song-artist { font-size: 26rpx; color: #666; margin-bottom: 8rpx; }
.song-meta { font-size: 24rpx; color: #999; }

.card-tag {
  flex-shrink: 0; 
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-weight: bold;
}
.card-tag.blank { background-color: #e3f2fd; color: #1976d2; }
.card-tag.paper { background-color: #f3e5f5; color: #ab47bc; }
/* ✨ 新增：图片标签样式 (橙色) */
.card-tag.image { background-color: #fff7e6; color: #fa8c16; }

.empty-state { margin-top: 200rpx; text-align: center; color: #ccc; font-size: 30rpx; }